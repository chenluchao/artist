/* pages/book/book.wxss */
.item{
	width: 100%;
	height: 230rpx;
	border-bottom: 2rpx solid #ccc;
	padding: 10rpx 0 10rpx 15rpx;
	box-sizing: border-box;
}
.box{
	display: flex;
}
.img{
	width: 165rpx;
	height: 195rpx;
	margin-top: 5rpx;
}
.img image{
	width: 100%;
	height: 100%;
}
.infobox{
	margin-left: 20rpx;
}
.infobox view{
	line-height: 50rpx;
}
.author{
	color: #aaa;
	font-size: 28rpx;
}
.publister{
	color: #aaa;
	font-size: 28rpx;
}
.price{
	color: #aaa;
	font-size: 28rpx;
}
.price text{
	color: red;
	font-size: 32rpx;
}

.search{
	position: relative;
	width: 735rpx;
	height: 72rpx;
	margin-left: 10rpx;
	border: 1rpx solid #ccc;
	box-sizing: border-box;
}
.search input{
	width: 630rpx;
	height: 70rpx;
}
.search view{
	position: absolute;
	right: 0;
	top: -1rpx;
	width: 100rpx;
	text-align: center;
	line-height: 68rpx;
	height: 71rpx;
	font-size: 30rpx;
	color: #fff;
	background-color: #0091ff;
}