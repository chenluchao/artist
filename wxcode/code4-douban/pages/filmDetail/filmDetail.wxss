.top{
	width: 100%;
	height: 330rpx;
	display: flex;
	border-top: 1rpx solid #ccc;
	border-bottom: 1rpx dotted #ccc;
	padding: 18rpx 0 20rpx 30rpx;
	box-sizing: border-box;
}
.imgbox{
	width: 210rpx;
	height: 290rpx;
}
.imgbox image{
	width: 100%;
	height: 100%;
}
.info{
	margin-left: 30rpx;
	font-size: 30rpx;
}
.info view{
	line-height: 60rpx;
}
.green{
	color: #0091ff;
}
.introduce{
	padding: 24rpx 10rpx 0 10rpx;
	box-sizing: border-box;
}
.table{
	color: #2bb2a3;
	font-size: 28rpx;
	width: 164rpx;
	height: 60rpx;
	border: 1rpx solid #2bb2a3;
	text-align: center;
	line-height: 60rpx;
}
.intro-con{
	font-size: 32rpx;
}