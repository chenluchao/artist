/* pages/film/film.wxss */
.page{
	background-color: #fafbfb;
}
.item{
	display: flex;
	width: 100%;
	height: 282rpx;
	border-top: 1rpx solid #ccc;
	border-bottom: 1rpx solid #ccc;
	padding: 10rpx 0 10rpx 25rpx;
	box-sizing: border-box;
	background-color: #fff;
}
.item:nth-of-type(n+2){
	margin-top: 20rpx;
}
.img{
	width: 180rpx;
	height: 260rpx;
}
.img image{
	width: 100%;
	height: 100%;
}
.info{
	font-size: 28rpx;
	margin-left: 20rpx;
}
.info view{
	line-height: 40rpx;
}
.green{
	color: #0091ff;
}
.gobut{
	margin-top: 10rpx;
	width: 100rpx;
	height: 45rpx;
	font-size: 28rpx;
	border: 1rpx solid #0091ff;
	color: #0091ff;
	text-align: center;
	border-radius: 5rpx;
}
.gobut navigator{
	line-height: 45rpx;
}


.search{
	position: relative;
	width: 735rpx;
	height: 72rpx;
	margin-left: 10rpx;
	border: 1rpx solid #ccc;
	box-sizing: border-box;
}
.search input{
	width: 630rpx;
	height: 70rpx;
}
.search view{
	position: absolute;
	right: 0;
	top: -1rpx;
	width: 100rpx;
	text-align: center;
	line-height: 68rpx;
	height: 71rpx;
	font-size: 30rpx;
	color: #fff;
	background-color: #0091ff;
}