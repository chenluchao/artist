/* pages/comment/comment.wxss */

.tableview{
	padding-bottom: 46px;
}

.comment-title{
	height: 35px;
	line-height: 35px;
	padding-left: 10px;
}

.tableview .cell{
	padding-left: 10px;
	padding-right: 10px;
	border-bottom: 1px solid #eaeaea;
	padding-bottom: 10px;
}

.info{
	height: 30px;
	display: flex;
	line-height: 30px;
	align-items: center;
	color: #aaa;
}

.time{
	font-size: 12px;
}
.username{
	flex-grow: 1;
	padding-left: 5px;
}

.tableview .cell image{
	width: 20px;
	height: 20px;
	border-radius: 50%;
}

.toolbar{
	position: fixed;
	width: 100%;
	height: 46px;
	left: 0;
	bottom: 0;
}

/* commet view */
page{
	height: 100%;
}
.comment-box{
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.4)
}
.comment-view{
	position: fixed;
	width: 100%;
	height: 300px;
	bottom: 0;
	background-color: white;
}

.control{
	position: relative;
	/* background-color: lightblue; */
	height: 44px;

}
.control .input-number{
	position: absolute;
	left: 10px;
	top: 10px;
}
.control .button{
	position: absolute;
	width: 80px;
	height: 40px;
	top: 2px;
	font-size: 16px;
	color: #888;
}
.control .cancel{
	right: 105px;
}
.control .send{
	right: 15px;
}
.input-area{
	padding: 20px;
	height: 216px;
	font-size: 14px;
}


.comment-content{
	word-wrap: break-word;
}