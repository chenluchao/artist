/* pages/user/user.wxss */

page{
	height: 100%;
	background-color: #eaeaea;
}
.top{
	position: relative;
}

.top .head-image{
	width: 200rpx;
	height: 200rpx;
	position: absolute;
	left: 275rpx;
	top: 175rpx;
	/* background-color: red; */
	border-radius: 50%;
}
.top .username{
	width: 200rpx;
	height: 50rpx;
	position: absolute;
	left: 275rpx;
	top: 425rpx;
	text-align: center;
	font-size: 20px;
	/* background-color: red; */
}

.tableview{
	margin-top: 20rpx;
}
.tableview .section{
	background-color: white;
	margin-bottom: 10px;
}
.tableview .section-title{
	height: 60rpx;
	line-height: 60rpx;
	padding-left: 20rpx;
	font-size: 14px;
}

.tableview .cell{
	border-top: 1px solid #ddd;
	height: 100rpx;
	
	line-height: 100rpx;
	padding-top: 5rpx;
	padding-bottom: 5rpx;
	padding-left: 30rpx;
	border-bottom: none;
	margin-bottom: 0px;
}
.tableview .cell image{
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle;
}
.tableview .cell text{
	margin-left: 20rpx;
	font-size: 14px;
}