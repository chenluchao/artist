/* pages/musicDetail/musicDetail.wxss */
.page{
	background-color: #ebebf1;
}
.page{
	padding-bottom: 80rpx;
}
.audio{
	text-align: center;
}
.content{
	padding: 30rpx 20rpx 20rpx 0rpx;
}
.detail-content{
	text-align: center;
}
.img{
	margin-left: 60rpx;
	box-sizing: border-box;
	width: 600rpx;
	height: 600rpx;
	border-radius: 50%;
	overflow: hidden;
}
.img image{
	width: 100%;
	height: 100%;
}
.title{
	text-align: center;
	font-size: 32rpx;
	color: #7c7c82;
	line-height: 66rpx;
}
.main{
	text-align: center;
	color: #000;
	font-size: 50rpx;
	font-weight: bold;
}
/* 收藏按钮 */
.toolbar{
	width: 100%;
	height: 80rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-top: 1rpx solid #ccc;
	display: flex;
	background-color: #Efefef;
	justify-content: space-around;
	align-items: center;
	font-size: 32rpx;
}
.toolbar image{
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}
.shell-box{
	display: flex;
}
.shell-box image{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.shell-box button{
	margin-right: 15rpx;
	padding: 0;
	background-color: #Efefef;
	border: none;
	width: 40rpx;
	height: 40rpx;
	position: relative;
}
/* 评论 */
.comment-box{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 700rpx;
	background-color: #fff;
	border-top: 1rpx solid #ccc;
	box-sizing: border-box;
}
.comment-in{
	width: 90%;
	height: 500rpx;
	margin-top: 30rpx;
	margin-left: 5%;
}
.comment-bar{
	border-top: 1rpx solid #ccc;
	width: 100%;
	display: flex;
	height: 200rpx;
	box-sizing: border-box;
	padding: 30rpx 20rpx 20rpx 0;
}
.comment-length{
	font-size: 40rpx;
	color: #bdbdbd;
	width: 412rpx;
	height: 100rpx;
	line-height: 100rpx;
	padding-left: 40rpx;
	box-sizing: border-box;
}
.comment-cancel{
	width: 130rpx;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #d8d8d8;
	text-align: center;
	color: #525252;
	border-radius: 15rpx;
	font-size: 34rpx;
}
.comment-put{
	font-size: 34rpx;
	width: 130rpx;
	height: 100rpx;
	background-color: #d8d8d8;
	text-align: center;
	line-height: 100rpx;
	margin-left: 30rpx;
	color: #525252;
	border-radius: 15rpx;
}
.mask{
	width: 100%;
	height: 506rpx;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #DDDDDD;
	opacity: 0.6;
}
/* 点击加载评论 */
.goComment{
	margin-top: 20rpx;
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 30rpx;
	text-align: center;
	color: #525252;
	background-color: #D8D8D8;
	border-radius: 15rpx;
}
/* 分享 */
page{
	width: 100%;
	height: 100%;
}
.shell-area{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: #fff;
}
.shell-con{
	padding-top: 40rpx;
	position: fixed;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	height: 455rpx;
	border-top: 1rpx solid #D5D5D5;
	border-bottom: 1rpx solid #D5D5D5;
	box-sizing: border-box;
}
.shell-cancel{
	position: fixed;
	bottom: 35rpx;
	left: 45%;
	color: #f06960;
	font-size: 30rpx;
}
.item-shell{
	text-align: center;
	display: inline-block;
	width: 151rpx;
	height: 200rpx;
}
.item-shell image{
	width: 120rpx;
	height: 120rpx;
}
.item-shell view{
	font-size: 21rpx;
	color: #3f3f3f;
	text-align: center;
}