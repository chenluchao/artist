.page{
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	border-top: 1rpx solid #b2b2b2;
}
page{
	background-color: #E5E5E5;
	width: 100%;
	height: 100%;
}
.collection-box{
	display: inline-block;
}
.con-box{
	background-color: #fff;
	margin-top: 5rpx;
	width: 355rpx;
	max-height: 471rpx;
	margin-left: 20rpx;
	box-shadow: 10rpx 10rpx 10rpx #ccc;
}
.con-img{
	width: 349rpx;
	height: 349rpx;
	margin-left: 3rpx;
}
.con-img image{
	width: 100%;
	height: 100%;
}
.con-title{
	font-size: 30rpx;
	color: #a6a6a6;
	line-height: 50rpx;
	margin-top: 17rpx;
	width: 100%;
	max-height: 100rpx;
	overflow: hidden;
}