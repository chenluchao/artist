/* pages/mine/mine.wxss */
page{
	width: 100%;
	height: 100%;
	background-color: #ecebf2;
}
.nav{
	width: 100%;
	height: 560rpx;
	position: relative;
}
.background-img{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}
.user-img{
	width: 270rpx;
	height: 270rpx;
	position: absolute;
	top: 15%;
	left: 33%;
	z-index: 2;
	border-radius: 50%;
	overflow: hidden;
	background-color: #6c7a93;
}
.user-img image{
	width: 100%;
	height: 100%;
}
.user-name{
	position: absolute;
	left: 26%;
	top: 70%;
	z-index: 2;
	width: 50%;
	height: 50rpx;
	text-align: center;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	color: #fff;
	font-weight: bold;
	font-size: 38rpx;
}
.btn-item{
	margin-top: 20rpx;
	background-color: #fff;
}
.item-title{
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	padding-left: 15rpx;
	color: #666;
	font-size: 32rpx;
}
.item-con{
	padding: 15rpx 0 15rpx 0;
	display: flex;
	border-top: 1rpx solid #ddd;
}
.item-con image{
	margin-left: 20rpx;
	width: 50rpx;
	height: 50rpx;
}
.item-con view{
	margin-left: 15rpx;
	font-size: 38rpx;
}
.foot{
	padding-bottom: 61rpx;
}