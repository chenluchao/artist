/* pages/retrieve/retrieve.wxss */
page{
	width: 100%;
	height: 100%;
	border-top: 1rpx solid #ccc;
	background-color: #EAEAEA;
	height: 100%;
	box-sizing: border-box;
}
.page{
	width: 100%;
	height: 100%;
	overflow: hidden;
	padding: 20rpx;
	box-sizing: border-box;
}
.nav{
	font-size: 30rpx;
	color: #878787;
}
.content{
	border-radius: 15rpx;
	margin-top: 20rpx;
	width: 100%;
	height: 300rpx;
	background-color: #fff;
	border: 1rpx solid #ccc;
}
.username,.sendSms{
	width: 100%;
	height: 100rpx;
	border-bottom: 1rpx solid #ccc;
	display: flex;
}
.code{
	display: flex;
	width: 100%;
	height: 100rpx;
}
.username image,.sendSms image,.code image{
	margin: 10rpx;
	width: 80rpx;
	height: 80rpx;
}
.username input{
	width: 80%;
	height: 100%;
}
.sendSms input,.code input{
	width: 50%;
	height: 100%;
}
.sms-btn{
	width: 35%;
	height: 50rpx;
	border-left: 1rpx solid #ccc;
	box-sizing: border-box;
	margin-top: 20rpx;
	color: #2d86f1;
	font-size: 32rpx;
	line-height: 50rpx;
	text-align: center;
}
.yz-code{
	width: 35%;
	height: 50rpx;
	border-left: 1rpx solid #ccc;
	box-sizing: border-box;
	margin-top: 20rpx;
	text-align: center;
}
.btn{
	margin-top: 20rpx;
	width: 100%;
	height: 90rpx;
	background-color: #ddd;
	color: #9A9A9A;
	text-align: center;
	line-height: 90rpx;
	border-radius: 10rpx;
}
	