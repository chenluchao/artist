/* pages/login/login.wxss */
.page{
	width: 100%;
	height: 100%;
	border-top: 1rpx solid #d4d4d4;
	padding: 40rpx;
	box-sizing: border-box;
}
page{
	width: 100%;
	height: 100%;
}
.input-box{
	box-sizing: border-box;
	overflow: hidden;
	width: 100%;
	border: 1rpx solid #ccc;
	border-radius: 20rpx;
}
.phone{
	display: flex;
	width: 100%;
	height: 91rpx;
	border-bottom: 1rpx solid #ccc;
}
.password{
	display: flex;
	width: 100%;
	height: 91rpx;
}
.phone input,.password input{
	margin-left: 10rpx;
	width: 100%;
	height: 100%;
}
.phone image,.password image{
	width: 100rpx;
	height: 90rpx;
}
.login-btn{
	margin-top: 20rpx;
	background-color: #eee;
	width: 100%;
	height: 86rpx;
	border-radius: 15rpx;
	text-align: center;
	font-size: 32rpx;
	line-height: 86rpx;
	color: #9a9a9a;
}
.foot{
	margin-top: 30rpx;
	display: flex;
	justify-content: space-between;
	color: #9a9a9a;
	font-size: 30rpx;
}
.active{
	background-color: #03CCBB;
	color: #fff;
}