/* pages/readDetail/readDetail.wxss */
.page{
	padding: 25rpx 25rpx 90rpx 25rpx;
}
.detail{
	padding: 20rpx;
}
.detail-title{
	padding: 30rpx;
	font-size: 44rpx;
	font-weight: bold;
}
.detail-author{
	padding-left: 30rpx;
	padding-bottom: 10rpx;
	font-size: 28rpx;
	color: #999;
}

.detail-content{
	color: #333;
}
/* 收藏按钮 */
.toolbar{
	width: 100%;
	height: 80rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-top: 1rpx solid #ccc;
	display: flex;
	background-color: #Efefef;
	justify-content: space-around;
	align-items: center;
	font-size: 32rpx;
}
.toolbar image{
	width: 60rpx;
	height: 60rpx;
	vertical-align: middle;
}
.shell-box{
	display: flex;
}
.shell-box image{
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	top: 0;
	left: 0;
}
.shell-box button{
	margin-right: 15rpx;
	padding: 0;
	background-color: #Efefef;
	border: none;
	width: 40rpx;
	height: 40rpx;
	position: relative;
}
/* 评论 */
.comment-box{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 700rpx;
	background-color: #fff;
	border-top: 1rpx solid #ccc;
	box-sizing: border-box;
}
.comment-in{
	width: 90%;
	height: 500rpx;
	margin-top: 30rpx;
	margin-left: 5%;
}
.comment-bar{
	border-top: 1rpx solid #ccc;
	width: 100%;
	display: flex;
	height: 200rpx;
	box-sizing: border-box;
	padding: 30rpx 20rpx 20rpx 0;
}
.comment-length{
	font-size: 40rpx;
	color: #bdbdbd;
	width: 412rpx;
	height: 100rpx;
	line-height: 100rpx;
	padding-left: 40rpx;
	box-sizing: border-box;
}
.comment-cancel{
	width: 130rpx;
	height: 100rpx;
	line-height: 100rpx;
	background-color: #d8d8d8;
	text-align: center;
	color: #525252;
	border-radius: 15rpx;
	font-size: 34rpx;
}
.comment-put{
	font-size: 34rpx;
	width: 130rpx;
	height: 100rpx;
	background-color: #d8d8d8;
	text-align: center;
	line-height: 100rpx;
	margin-left: 30rpx;
	color: #525252;
	border-radius: 15rpx;
}
.mask{
	width: 100%;
	height: 506rpx;
	position: fixed;
	top: 0;
	left: 0;
	background-color: #DDDDDD;
	opacity: 0.6;
}
/* 点击加载评论 */
.goComment{
	margin-top: 20rpx;
	width: 100%;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 30rpx;
	text-align: center;
	color: #525252;
	background-color: #D8D8D8;
	border-radius: 15rpx;
}