/**app.wxss**/
.nav{
	background-color: #fff;
	width: 100%;
	height: 68rpx;
	display: flex;
	padding: 10rpx 0;
	box-sizing: border-box;
}
.search{
	width: 10%;
	height: 100%;
	vertical-align: middle;
}
.search image{
	margin-left: 20rpx;
	width: 55rpx;
	height: 50rpx;
}
.name{
	width: 80%;
	text-align: center;
	vertical-align: middle;
}
.mine{
	width: 10%;
	height: 100%;
	vertical-align: middle;
}
.mine image{
	margin-top: -5rpx;
	width: 60rpx;
	height: 60rpx;
}
page{
	width: 100%;
	height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.item-box{
	background-color: #eaeaea;
}
.item{
	padding: 20rpx;
	border-bottom: 1rpx solid #ccc;
	background-color: #fff;
	margin-bottom: 20rpx;
}
.item>view{
	margin-bottom: 5rpx;
}
.categoryName{
	text-align: center;
	color: #9c9ca0;
	font-size: 32rpx;
}
.title{
	font-size: 36rpx;
	font-weight: bold;
}
.author{
	font-size: 32rpx;
	color: #9c9ca0;
}
.img image{
	width: 100%;
}
.forward{
	font-size: 32rpx;
	color: #9c9ca0;
}
.bottom{
	font-size: 28rpx;
	color: #9c9ca0;
}
.dark{
	background-color: #08192D!important;
	color: #999!important;
}