/* pages/clc_list/clc_list.wxss */
.nav{
	width: 100%;
	height: 80rpx;
	text-align: center;
	color: #03ccbb;
	background-color: #CCCCCC;
	line-height: 80rpx;
}
.new-box{
	padding: 0 20rpx 0 20rpx;
	background-color: #EFEFEF;
	box-sizing: border-box;
}
.new-item{
	display: flex;
	background-color: white;
	width: 100%;
	box-sizing: border-box;
	padding: 15rpx;
	margin-top: 20rpx;
	border-radius: 10rpx;
}
.item-title{
	width: 70%;
}
.item-img{
	width: 30%;
}
.item-img image{
	width: 200rpx;
	height: 200rpx;
}