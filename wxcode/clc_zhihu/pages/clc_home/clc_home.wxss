/* pages/clc_home/clc_home.wxss */
.slide-image{
	width: 100%;
	height: 450rpx;
}
.swiper{
	width: 100%;
	height: 450rpx;
}
.swiper-item{
	position: relative;
}
.top-title{
	width: 100%;
	position: absolute;
	top: 330rpx;
	left: 0;
	background-color: #000;
	opacity: 0.6;
	color: white;
	text-align: center;
	padding: 10rpx 0 10rpx 0;
}
.new-box{
	padding: 0 20rpx 0 20rpx;
	background-color: #EFEFEF;
	box-sizing: border-box;
}
.new-title{
	color: #a0a1a6;
	padding: 20rpx 0 30rpx 10rpx;
}
.new-item{
	display: flex;
	background-color: white;
	width: 100%;
	box-sizing: border-box;
	padding: 15rpx;
	margin-top: 20rpx;
	border-radius: 10rpx;
}
.item-title{
	width: 70%;
}
.item-img{
	width: 30%;
}
.item-img image{
	width: 200rpx;
	height: 200rpx;
}
.more{
	margin-top: 50rpx;
	background-color: #16a400;
	color: #fff;
	text-align: center;
	padding: 15rpx;
	height: 50rpx;
	line-height: 50rpx;
	border-radius: 20rpx;
}